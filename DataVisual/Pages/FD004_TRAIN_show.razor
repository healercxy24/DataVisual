@code {
    [Parameter]
    public string? Id { get; set; }

    private List<FD4TRAIN> fd4trains;  //for show all the records

    private List<FD4TRAIN> fd4train_single;  // for only a single record

    protected override async Task OnParametersSetAsync()
    {
        if(Id == null)
            fd4trains = await fd4service.GetFD4TRAIN();
        else
        {
            fd4train_single = await fd4service.GetSingleFD4TRAIN(Convert.ToInt32(Id));
        }
    }

    void Return()
    {
        NavigationManager.NavigateTo("/fd004/train");
    }
}